# ===========================================
# 既存のOAuth 1.0a設定 (現在使用中)
# ===========================================
NOTION_TOKEN=your_notion_token_here
NOTION_SOURCE_PAGE_ID=your_notion_page_id
NOTION_PUBLIC_URL=https://your-public-notion-page-url

X_API_KEY=your_x_api_key_here
X_API_SECRET=your_x_api_secret_here
X_ACCESS_TOKEN=your_x_access_token_here
X_ACCESS_SECRET=your_x_access_token_secret_here

# ===========================================
# OAuth 2.0 PKCE テスト用設定 (新規追加)
# ===========================================
# Twitter Developer Portalで取得
X_CLIENT_ID=your_x_client_id_here
X_CLIENT_SECRET=your_x_client_secret_here
X_REDIRECT_URI=https://localhost:3000/callback

# OAuth 2.0で取得したトークン（oauth2-test.tsで取得）
X_ACCESS_TOKEN_V2=your_oauth2_access_token_here
X_REFRESH_TOKEN=your_oauth2_refresh_token_here

# X Bearer Token (読み取り専用API用)
X_BEARER=your_x_bearer_token_here
X_USER_ID=your_x_user_id_here

# ===========================================
# その他のAPI設定
# ===========================================
NOTION_DATABASE_ID=your_database_id_here
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# テスト・動作設定
# ===========================================
USE_GEMINI=false
DRY_RUN=false
SUMMARY_LINES=2
SUMMARY_LANG=ja
GEMINI_MAX_RPM=24
GEMINI_BATCH_SIZE=8